<mvc:XMLView
    controllerName="demonr.controller.employee.EmployeeList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page
        id="employeeListPage"
        title="{i18n>PageTitle}"
        titleAlignment="Center"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <List
                id="employeeList"
                headerText="{i18n>ListHeaderText}"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{/Employees}"
            >
                <items>
                    <StandardListItem
                        title="{FirstName} {LastName}"
                        iconDensityAware="false"
                        iconInset="false"
                        type="Navigation"
                        press=".onNavToDetail"
                    />
                </items>
            </List>
        </content>
    </Page>
</mvc:XMLView>
